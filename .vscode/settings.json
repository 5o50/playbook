{
	/* -------------------------------------------------------------------------- */
	/*                               Set the default                              */
	/* -------------------------------------------------------------------------- */
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"editor.suggest.showSnippets": false,
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports": "explicit"
	},
	"explorer.autoReveal": false,
	"explorer.compactFolders": false,
	"workbench.iconTheme": "vscode-great-icons",
	"workbench.colorTheme": "Minimal Kiwi",
	"workbench.tree.indent": 20,
	"editor.fontFamily": "'Fira Code', Menlo, Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	/* -------------------------------------------------------------------------- */
	/*                               Search Exclude                               */
	/* -------------------------------------------------------------------------- */
	"search.exclude": {
		"**/.expo": true,
		"**/.sst": true,
		"**/.open-next": true,
		"**/.tamagui": true
	},
	/* -------------------------------------------------------------------------- */
	/*                              File Associations                             */
	/* -------------------------------------------------------------------------- */
	"files.associations": {
		"*.journal": "ledger"
	},
	/* -------------------------------------------------------------------------- */
	/*                                Per-Language                                */
	/* -------------------------------------------------------------------------- */
	"[makefile]": {
		"editor.insertSpaces": false,
		"editor.detectIndentation": false
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.tsserver.log": "off", // SET THIS TO VERBOSE TO DEBUG TYPESCRIPT !!!!
	"typescript.tsserver.maxTsServerMemory": 12288,
	"typescript.tsserver.nodePath": "node",
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"comment-divider.languagesMap": {
		"prisma": ["//"]
	},
	"task.allowAutomaticTasks": "on",
	"markdown.styles": [],
	/* -------------------------------------------------------------------------- */
	/*                                   GraphQL                                  */
	/* -------------------------------------------------------------------------- */
	//"vscode-graphql.debug": true,
	/* -------------------------------------------------------------------------- */
	/*                                  LOKALIZE                                  */
	/* -------------------------------------------------------------------------- */
	// https://github.com/lokalise/i18n-ally/wiki/Configurations
	// https://github.com/lokalise/i18n-ally/tree/main/examples/by-frameworks
	"i18n-ally.enabledFrameworks": ["react-i18next", "next-intl", "i18next"],
	"i18n-ally.localesPaths": [
		"apps/app/src/i18n/locales",
		"apps/website/messages",
		"packages/email/i18n/locales",
		"packages/notifications/i18n/locales"
	],
	"i18n-ally.keystyle": "nested",
	"i18n-ally.namespace": true,
	"i18n-ally.pathMatcher": "{locale}/{namespaces}.json",
	"i18n-ally.sortKeys": true,
	"i18n-ally.keepFulfilled": true,
	"i18n-ally.sourceLanguage": "en",
	"i18n-ally.displayLanguage": "en",
	"i18n-ally.extract.keygenStrategy": "slug",
	"i18n-ally.translate.engines": ["google"],
	"i18n-ally.translate.google.apiKey": "AIzaSyCZbdJMlvfRt-1fdwnB8ybyog72rb5gzuE",
	/* -------------------------------------------------------------------------- */
	/*                                    JEST                                    */
	/* -------------------------------------------------------------------------- */
	//"jest.jestCommandLine": "bun run test"
	"jest.runMode": {
		"type": "on-demand"
		// "coverage": true
	}
}
